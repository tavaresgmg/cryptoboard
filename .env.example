# API
NODE_ENV=development
PORT=3000
WEB_ORIGIN=http://localhost:5173
WEB_APP_URL=http://localhost:5173
# Opcional: sobrescreve a inferência por WEB_APP_URL (true/false)
AUTH_COOKIE_SECURE=false
MONGODB_URI=mongodb://localhost:27017/cryptoboard
JWT_SECRET=change-me-to-a-secure-key
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
COINPAPRIKA_BASE_URL=https://api.coinpaprika.com/v1

# S3 Storage (MinIO local / Cloudflare R2 prod)
S3_ENDPOINT=http://localhost:9000
S3_PUBLIC_ENDPOINT=http://localhost:9000
# true: gera URL assinada usando S3_PUBLIC_ENDPOINT (bom para MinIO local)
# false: gera URL pública direta sem assinatura (bom para endpoint público R2 .r2.dev)
S3_PUBLIC_SIGNED_URLS=true
# true: inclui bucket na URL pública (ex: /avatars/me.png)
# false: endpoint já aponta para o bucket (ex: https://pub-xxx.r2.dev/me.png)
S3_PUBLIC_INCLUDE_BUCKET=true
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=avatars
AVATAR_MAX_BYTES=5242880

# Email (Resend — https://resend.com, free tier 100 emails/day)
RESEND_API_KEY=re_YOUR_API_KEY_HERE
RESEND_FROM=noreply@yourverifieddomain.com

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=1 minute

# Web
VITE_API_URL=/api
